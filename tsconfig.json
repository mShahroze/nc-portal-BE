{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "types": ["jest", "node"],
  "include": ["prisma/**/*", "src/**/*.ts", "src/**/*.tsx", "eslint.config.js", "**/*.spec.ts"],
  "exclude": ["node_modules"]
}